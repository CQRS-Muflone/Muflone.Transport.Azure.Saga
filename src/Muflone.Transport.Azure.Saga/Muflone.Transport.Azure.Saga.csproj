<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>Mulfone Transport Azure Saga</Title>
    <Version>8.1.1</Version>
    <Authors>Alberto Acerbis - Alessandro Colla</Authors>
    <Description>Muflone saga implementation for MS Azure</Description>
    <PackageProjectUrl>https://github.com/CQRS-Muflone/Muflone.Transport.Azure.Saga</PackageProjectUrl>
    <PackageIcon>Logo.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/CQRS-Muflone/Muflone.Transport.Azure.Saga</RepositoryUrl>
    <PackageTags>Broker, MS Azure, CQRS, Saga, Event Sourcing</PackageTags>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageVersion>8.1.1</PackageVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Muflone.Saga" Version="8.1.1" />
    <PackageReference Include="Muflone.Transport.Azure" Version="8.1.1" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Abstracts\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\Logo.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
